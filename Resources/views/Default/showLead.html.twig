{% if post is defined %}
<h1 class="post-title">{{ post.title }}</h1>
<p class="post-lead">
    {% if post.lead %}
        {{ post.lead | raw | striptags | truncate(150, true) }}
    {% else %}
        {{ post.body | raw | striptags | truncate(150, true) }}
    {% endif %}
    <br />
    <a href="{{ path('soloist_blog_show', {slug: post.slug}) }}" class="readmore">
        {% trans %}news.readmore{% endtrans %}
    </a>
</p>
{% endif %}
